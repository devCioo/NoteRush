@using BitzArt.Blazor.Cookies
@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="d-flex justify-center align-center background">
    @Body
</MudLayout>

<MudAlert Severity="Severity.Error" Variant="Variant.Filled" Square id="blazor-error-ui">
    <MudStack Row Spacing="1">
        <MudText>@Localizer["UnhandledError"]</MudText>
        <MudLink Href="">@Localizer["Refresh"]</MudLink>
    </MudStack>
</MudAlert>

@code {
    private MudTheme Theme = new MudTheme
    {
        PaletteLight = new PaletteLight
        {
            Primary = Colors.Shades.White,
            TextPrimary = Colors.Shades.White
        },
        Typography = new Typography
        {
            Body1 = new Body1Typography
            {
                FontWeight = "700",
                LineHeight = "1.43"
            },
            Default = new DefaultTypography
            {
                FontFamily = new[] { "Quicksand" },
                FontSize = "1rem",
                FontWeight = "500"
            },
            H3 = new H3Typography
            {
                FontWeight = "700"
            },
            H6 = new H6Typography
            {
                FontWeight = "700"
            }
        },
    };
}

<style>
    html, body {
        height: 100%;
    }

    #blazor-error-ui {
        color-scheme: light only;
        background: lightyellow;
        bottom: 0;
        box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
        box-sizing: border-box;
        display: none;
        left: 0;
        padding: 0.6rem 1.25rem 0.7rem 1.25rem;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

    #blazor-error-ui .dismiss {
        cursor: pointer;
        position: absolute;
        right: 0.75rem;
        top: 0.5rem;
    }

    .background {
        background: url('images/backgrounds/background.jpeg');
        background-size: cover;
    }
</style>