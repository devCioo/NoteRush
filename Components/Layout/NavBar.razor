<MudAppBar>
	<MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="() => OnMenuToggle.InvokeAsync()" Color="Color.Inherit" />
	<MudSpacer />
	<MudStack Row>
		<LanguageSelector />
		<MudToggleIconButton Toggled="IsDarkMode" ToggledChanged="ChangeTheme" Icon="@Icons.Material.Filled.DarkMode" ToggledIcon="@Icons.Material.Filled.LightMode"
			Color="Color.Inherit" ToggledColor="Color.Inherit" />
	</MudStack>
</MudAppBar>

@code {
	[Parameter]
	public EventCallback OnMenuToggle { get; set; }

	[Parameter]
	public EventCallback<bool> OnThemeToggle { get; set; }

	[Parameter]
	public bool IsDarkMode { get; set; }

	private async Task ChangeTheme()
	{
		IsDarkMode = !IsDarkMode;
		await OnThemeToggle.InvokeAsync(IsDarkMode);
	}
}